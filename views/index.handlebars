<div class="container">
    <div class="topRow">
        <h1>Registration Vehicle App!!</h1>
    </div>
    <div class="examples">
        <h2>e.g CY 123-456 | CA 345-673 | CL 876-895 </h2>
    </div>

    <form action="/reg_numbers" method="POST">
        <div class="bottomRow">
            <div class="errors">
                <p>{{messages.error}}</p>
            </div>
            <input type="text" name="name" value="" placeholder="enter a registration..." class="inputText"
                id="registration">

        </div>
        <br>
        <div class="buttonRow">
            <button class="button-primary Addbtn" type="submit" name="button">Add Registrations</button>
        </div>

    </form>

    <br />

    <form action="/filter:towns" method="GET">
        <div class="selector">
            <h3>Select a Town:</h3>
            <div class="selectTown">
                <select name="towns" >
                    <option value="All">All Towns</option>
                    <option value="1">Bellville</option>
                    <option value="2">Cape Town</option>
                    <option value="3">Stellenbosch</option>
                </select>

                <input type="submit" value="Filter" class="button-primary filter">
                <a href="/clear">Reset</a>

            </div>
        </div>
    </form>


    <hr>

    <div>
        <ul>
            {{#each reg_number}}
            <li class="displayHere">{{reg_number}}
            </li>
            {{/each}}
        </ul>
    </div>




</div>